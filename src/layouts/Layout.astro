---
export interface Props {
  title: string;
  description?: string;
}

const { title, description = "IT技術で習慣を定着させる - AIとNotionでビジネスの課題を解決" } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      body {
        font-family: system-ui, sans-serif;
        margin: 0;
        padding: 0;
        line-height: 1.6;
        color: #333;
      }
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }
      header {
        background: #fff;
        border-bottom: 1px solid #eee;
        padding: 1rem 0;
      }
      nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .logo {
        font-size: 1.5rem;
        font-weight: bold;
        color: #0066cc;
        text-decoration: none;
      }
      .nav-links {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
      }
      .nav-links a {
        text-decoration: none;
        color: #333;
        font-weight: 500;
      }
      .nav-links a:hover {
        color: #0066cc;
      }
      main {
        min-height: calc(100vh - 200px);
      }
      footer {
        background: #333;
        color: white;
        text-align: center;
        padding: 2rem 0;
        margin-top: 4rem;
      }
      .page-content {
        padding: 2rem 0;
      }
      .page-title {
        text-align: center;
        margin-bottom: 2rem;
        color: #333;
      }
    </style>
  </head>
  <body>
    <header>
      <div class="container">
        <nav>
          <a href="/" class="logo">HabitEngineer</a>
          <ul class="nav-links">
            <li><a href="/">HabitEngineerとは</a></li>
            <li><a href="/services">サービス</a></li>
            <li><a href="/products">開発製品</a></li>
            <li><a href="/results">実績</a></li>
            <li><a href="/about">事業者情報</a></li>
            <li><a href="/blog">ブログ</a></li>
            <li><a href="/contact">お問い合わせ</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="container">
        <p>&copy; 2025 HabitEngineer. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>